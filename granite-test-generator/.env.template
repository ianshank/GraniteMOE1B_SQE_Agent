# Environment Configuration Template
# Copy this to .env and customize with your actual values
# DO NOT commit .env files with actual secrets to version control

# API Tokens (replace with actual values)
JIRA_API_TOKEN=your-jira-api-token-here
GITHUB_TOKEN=your-github-token-here
HF_TOKEN=your-huggingface-token-here
OPENAI_API_KEY=your-openai-key-here

# API Endpoints (customize for your organization)
JIRA_BASE_URL=https://your-company.atlassian.net
GITHUB_API_BASE_URL=https://api.github.com

# Repository Settings
GITHUB_ORG=your-organization
DEFAULT_REPO_OWNER=your-org

# Model Configuration
DEFAULT_MODEL_NAME=ibm-granite/granite-3.0-1b-a400m-instruct
DEFAULT_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Training Parameters
DEFAULT_EPOCHS=3
DEFAULT_BATCH_SIZE=4
DEFAULT_LEARNING_RATE=5e-5

# System Configuration
DEFAULT_HTTP_TIMEOUT=30
DEFAULT_MAX_RETRIES=3
DEFAULT_LOG_LEVEL=INFO

# File System Paths
OUTPUT_DIR=output
MODELS_DIR=./models/fine_tuned_granite
CACHE_DIR=cache
LOGS_DIR=logs
DATA_DIR=data