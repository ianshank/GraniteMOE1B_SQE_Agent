# Coverage configuration for Granite Test Case Generator
# Addresses CI coverage failures with temporary/dynamic modules

[run]
source = src, granite-test-generator/src
omit = 
    # Test files
    */tests/*
    */test_*
    */*test*
    # Virtual environments
    */.venv/*
    */venv/*
    */.venv311/*
    # Temporary files and dynamic modules (comprehensive patterns)
    */tmp/*
    */_remote_module_*
    */tmpaf76mqvx/*
    */tmp*/*
    */_tmp*
    # Cache and build artifacts
    */__pycache__/*
    */build/*
    */dist/*
    */.pytest_cache/*
    */cache/*
    */chroma_db/*
    # External dependencies and dynamic modules
    */site-packages/*
    */mlx_lm/*
    */transformers/*
    */huggingface_hub/*
    */torch/*
    # Dynamic Python modules created by MLX/transformers
    */_remote_module_*.py
    */remote_module_*.py
    */*_remote_module_*.py
    # Any temporary scriptable modules
    */*_non_scriptable.py
    */non_scriptable_*.py

[report]
# Ignore errors from missing source files (temporary/dynamic modules)
ignore_errors = True
skip_covered = True
skip_empty = True
precision = 2
show_missing = True
exclude_lines =
    pragma: no cover
    def __repr__
    if self.debug:
    if settings.DEBUG
    raise AssertionError
    raise NotImplementedError
    if 0:
    if __name__ == .__main__.:
    class .*\bProtocol\):
    @(abc\.)?abstractmethod

[html]
directory = htmlcov
skip_covered = True
skip_empty = True

[xml]
output = coverage.xml
